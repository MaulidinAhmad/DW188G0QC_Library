{
  "name": "bootcamp",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@tailwindcss/ui": "^0.6.2",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "autoprefixer": "9.8.6",
    "chokidar-cli": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-froala-wysiwyg": "^3.2.2-1",
    "react-icons": "^3.11.0",
    "react-reader": "^0.18.5",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "tailwindcss": "^1.8.10"
  },
  "scripts": {
    "start:tailwind": "postcss src/assets/tailwind.css -o src/assets/main.css",
    "watch:tailwind": "chokidar 'src/**/*.css' 'src/**/*.scss' --ignore src/assets/main.css -c 'npm run start:tailwind'",
    "prebuild": "run-s start:tailwind",
    "start": "npm-run-all start:tailwind --parallel watch:tailwind start:react",
    "start:react": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
